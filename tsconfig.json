{
  "compilerOptions": {
    "target": "ES6",
    "lib": [ "ESNext" ],
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "example"]
}
