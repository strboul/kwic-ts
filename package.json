{
  "name": "@strboul/kwic-ts",
  "version": "0.1.0",
  "description": "Locate keywords-in-contexts",
  "author": "Metin Yazici",
  "main": "dist/kwic.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strboul/kwic-ts.git"
  },
  "bugs": {
    "url": "https://github.com/strboul/kwic-ts/issues"
  },
  "homepage": "https://github.com/strboul/kwic-ts#readme",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:debug-devtools": "node --inspect $(npm bin)/jest --no-cache --runInBand",
    "test:debug-repl": "node inspect $(npm bin)/jest --runInBand",
    "lint": "eslint src/** --ext .ts",
    "formatter": "prettier --list-different '{,!(build|coverage|dist|example)/**/}*.{css,js,jsx,ts}'",
    "coverage": "jest --coverage",
    "checkDependencyUpdates": "ncu -u --errorLevel 2",
    "npm:link": "npm link '@strboul/kwic-ts'",
    "npm:publish": "npm login && npm publish --access public"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "babel-jest": "^27.0.6",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "*",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "npm-check-updates": "^11.8.1",
    "prettier": "2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
